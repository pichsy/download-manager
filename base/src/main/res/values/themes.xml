<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShanHai" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tool_bar_color</item>
        <item name="colorPrimaryVariant">@color/tool_bar_text_color</item>
        <item name="colorOnPrimary">@color/tool_bar_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tool_bar_text_color</item>
        <item name="colorSecondaryVariant">@color/tool_bar_text_color</item>
        <item name="colorOnSecondary">@color/tool_bar_text_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <!--    全屏沉浸式状态栏 必要属性  -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
<!--        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">always</item>-->
    </style>
</resources>