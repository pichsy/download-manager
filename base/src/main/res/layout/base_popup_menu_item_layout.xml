<?xml version="1.0" encoding="utf-8"?>
<com.pichs.xwidget.view.XConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#00000000"
    app:xp_pressedBackground="@color/content_background_pressed_color"
    tools:background="@color/content_background_color">

    <com.pichs.xwidget.view.XTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="名称"
        android:textColor="@color/content_text_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/content_item_divider"
        app:layout_constraintBottom_toBottomOf="parent" />


</com.pichs.xwidget.view.XConstraintLayout>