<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.pichs.xwidget.view.XImageView
        android:id="@+id/iv_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_app_use_liuliang_bg"
        app:layout_constraintDimensionRatio="H,276:366"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.736" />

    <com.pichs.xwidget.view.XTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="应用下载提醒"
        android:textColor="#333"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_bg" />

    <com.pichs.xwidget.view.XImageView
        android:id="@+id/iv_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_download_liuliang_tips_icon"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintWidth_percent="0.32" />

    <com.pichs.xwidget.view.XTextView
        android:id="@+id/tv_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:text="有新版本升级，升级会使用一定的移动数据流量，是否确认同步?"
        android:textColor="#333"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_liuliang_tips"
        app:layout_constraintEnd_toEndOf="@+id/iv_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_icon" />

    <com.pichs.xwidget.roundview.XRoundTextView
        android:id="@+id/tv_liuliang_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:background="#3000"
        android:paddingHorizontal="15dp"
        android:paddingVertical="7dp"
        android:text="预计消耗 50MB流量"
        android:textColor="#fff"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:xp_radius="8dp" />


    <LinearLayout
        android:id="@+id/ll_do_not_remind"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/iv_bg"
        app:layout_constraintStart_toStartOf="@id/iv_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_liuliang_tips">

        <com.pichs.xwidget.view.XCheckedImageView
            android:id="@+id/civ_do_not_remind"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_app_sue_data_cbox_unchecked"
            app:xp_checked_src="@drawable/ic_app_sue_data_cbox_checked" />

        <com.pichs.xwidget.view.XTextView
            android:id="@+id/tv_do_not_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="不再提醒"
            android:textColor="#333333"
            android:textSize="11dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/iv_bg"
        app:layout_constraintStart_toStartOf="@id/iv_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_bg">

        <com.pichs.xwidget.roundview.XRoundButton
            android:id="@+id/btn_connect_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="#A6A0A0"
            android:paddingVertical="12dp"
            android:text="连接WIFI"
            android:textColor="#fff"
            app:xp_radius="50dp" />

        <com.pichs.xwidget.roundview.XRoundButton
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:text="立即下载更新"
            android:textColor="#fff"
            app:xp_backgroundEndColor="#9F05FE"
            app:xp_backgroundStartColor="#6621F8"
            app:xp_radius="50dp" />

    </LinearLayout>


    <com.pichs.xwidget.view.XImageView
        android:id="@+id/iv_close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        app:xp_pressedAlpha="0.8"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_app_use_data_close"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_bg"
        app:layout_constraintWidth_percent="0.0693" />


</androidx.constraintlayout.widget.ConstraintLayout>