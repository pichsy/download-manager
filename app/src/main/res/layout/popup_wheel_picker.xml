<?xml version="1.0" encoding="utf-8"?>
<com.pichs.xwidget.cardview.XCardConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="28dp"
    android:background="#fff"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="16dp"
    app:xp_radius="25dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流量下载提醒"
        android:textColor="#333333"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pichs.xwidget.wheel.XWheelView
        android:id="@+id/wheel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:xp_wheelDividerColor="#d1d1d1"
        app:xp_wheelDividerSize="1dp"
        app:xp_wheelGradient="true"
        app:xp_wheelGravity="center"
        app:xp_wheelItemCount="3"
        app:xp_wheelItemSize="50dp"
        app:xp_wheelOrientation="vertical"
        app:xp_wheelTextCenterColor="#0047F8"
        app:xp_wheelTextColor="#333333"
        app:xp_wheelTextNormalBold="false"
        app:xp_wheelTextSelectedBold="true"
        app:xp_wheelTextSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/wheel_view">

        <com.pichs.xwidget.roundview.XRoundButton
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#0000"
            android:gravity="center"
            android:text="取消"
            android:textColor="#0047F8"
            android:textSize="17dp"
            app:xp_pressedBackground="#e1e1e1"
            app:xp_radius="30dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#dedede" />

        <com.pichs.xwidget.roundview.XRoundButton
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="#0000"
            android:gravity="center"
            android:text="确定"
            android:textColor="#0047F8"
            android:textSize="17dp"
            app:xp_pressedBackground="#e1e1e1"
            app:xp_radius="30dp" />

    </LinearLayout>

</com.pichs.xwidget.cardview.XCardConstraintLayout>
