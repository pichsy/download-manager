<?xml version="1.0" encoding="utf-8"?>
<com.pichs.xwidget.cardview.XCardConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="3dp"
    android:background="@color/content_background_color"
    android:padding="12dp"
    app:xp_radius="12dp">

    <com.pichs.xwidget.cardview.XCardImageView
        android:id="@+id/iv_cover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="#DFDFFB"
        app:xp_radius="10dp" />

    <com.pichs.xwidget.view.XTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/content_text_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_delete"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_cover" />

    <com.pichs.xwidget.view.XTextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/content_text_color"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <com.pichs.xwidget.view.XImageView
        android:id="@+id/iv_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:padding="8dp"
        android:src="@drawable/ic_close_single"
        android:tint="#999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_download"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pichs.download.demo.widget.ProgressButton
        android:id="@+id/btn_download"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:clickable="true"
        android:focusable="true"
        android:text="下载"
        android:textColor="#000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pb_backgroundColor="#d9d2e9"
        app:pb_progressColor="#196ef5"
        app:pb_radius="16dp" />

</com.pichs.xwidget.cardview.XCardConstraintLayout>