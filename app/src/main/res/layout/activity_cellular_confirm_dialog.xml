<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- 卡片内容区域 -->
    <com.pichs.xwidget.cardview.XCardConstraintLayout
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:xp_backgroundGradientColors="#22174D,#22174D,#22174D,#4E246D"
        app:xp_backgroundGradientOrientation="vertical"
        app:xp_radius="16dp">

        <!-- 标题标签（突出于卡片上方） -->
        <com.pichs.xwidget.roundview.XRoundTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_download_tips_title"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="流量安装提醒"
            android:textColor="#9B2760"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardContent"
            app:xp_borderColor="#E8D0D8"
            app:xp_borderWidth="2dp"
            app:xp_radius="10dp" />

        <!-- 图标区域（虚线边框） -->
        <com.pichs.xwidget.roundview.XRoundImageView
            android:id="@+id/iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_download_place_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <!-- 消息内容 -->
        <com.pichs.xwidget.view.XTextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="28dp"
            android:lineSpacingMultiplier="1.15"
            android:text="已预约WLAN下自动安装，或选择消耗，1MB流量直接安装，是否直接安装?"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon" />

        <!-- 设置提醒链接 -->
        <LinearLayout
            android:id="@+id/llDoNotRemind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMessage">

            <com.pichs.xwidget.view.XTextView
                android:id="@+id/tvDoNotRemind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用流量下载时每次都提醒"
                android:textColor="#CBCBCB"
                android:textSize="13dp" />

            <com.pichs.xwidget.view.XTextView
                android:id="@+id/tvGoSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="去设置"
                android:textColor="#C17FFC"
                android:textSize="13dp" />

            <!-- 隐藏原来的checkbox，保留ID兼容 -->
            <com.pichs.xwidget.view.XCheckedImageView
                android:id="@+id/civDoNotRemind"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 底部按钮区域 -->
        <LinearLayout
            android:id="@+id/ll_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llDoNotRemind">

            <!-- 取消按钮 -->
            <com.pichs.xwidget.roundview.XRoundButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="#0000"
                android:paddingVertical="14dp"
                android:text="取消"
                android:textColor="#D9D9D9"
                android:textSize="14dp"
                android:textStyle="bold"
                app:xp_borderColor="#8A8A8A"
                app:xp_borderWidth="1dp"
                app:xp_radius="25dp" />

            <!-- 直接安装按钮 -->
            <com.pichs.xwidget.roundview.XRoundButton
                android:id="@+id/btnUseCellular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:paddingVertical="14dp"
                android:text="直接安装"
                android:textColor="#AE0291"
                android:textSize="14dp"
                android:textStyle="bold"
                app:xp_backgroundGradientColors="#FEFEFE,#FDCBAC"
                app:xp_backgroundOrientation="vertical"
                app:xp_radius="25dp" />
        </LinearLayout>
    </com.pichs.xwidget.cardview.XCardConstraintLayout>
</FrameLayout>
