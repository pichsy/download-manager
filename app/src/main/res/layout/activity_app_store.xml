<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_common_top_bg_svg">

    <com.pichs.xwidget.view.XConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.pichs.xwidget.space.XStatusBarSpace
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/top_bar_view"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/status_bar" />

        <com.pichs.xwidget.cardview.XCardImageView
            android:id="@+id/iv_back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="10dp"
            android:padding="3dp"
            android:src="@drawable/ic_home_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bar"
            app:xp_pressedAlpha="0.82" />

        <com.pichs.xwidget.view.XImageView
            android:id="@+id/iv_settings"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_download_settings"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_back"
            app:xp_pressedAlpha="0.8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="应用更新"
            android:textColor="#333"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back" />

    </com.pichs.xwidget.view.XConstraintLayout>

    <com.pichs.xwidget.radiogroup.XCardLinearRadioGroup
        android:id="@+id/ll_tab_group"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:background="#66FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        app:xp_radius="15dp">

        <com.pichs.xwidget.radiobutton.XRadioCardButton
            android:id="@+id/tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="#0000"
            android:checked="true"
            android:text="必装应用"
            android:textColor="#0D0B1D"
            android:textSize="15dp"
            app:xp_checkedBackground="#fff"
            app:xp_checkedTextColor="#3381FF"
            app:xp_radius="14dp" />

        <com.pichs.xwidget.radiobutton.XRadioCardButton
            android:id="@+id/tab_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="#0000"
            android:text="推荐应用"
            android:textColor="#0D0B1D"
            android:textSize="15dp"
            app:xp_checkedBackground="#fff"
            app:xp_checkedTextColor="#3381FF"
            app:xp_radius="14dp" />

    </com.pichs.xwidget.radiogroup.XCardLinearRadioGroup>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_tab_group" />

</androidx.constraintlayout.widget.ConstraintLayout>